<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding = "true">

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#F8F8F5"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_profile_photo"
                    android:layout_width="49dp"
                    android:layout_height="42dp"
                    android:src="@drawable/profile"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="닉네임"
                        android:textColor="#000000"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/write_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020/01/01  12시 10분"></TextView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/community_item_state"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="110dp"
                    android:layout_gravity="center"
                    android:src="@drawable/more_vertical"></ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/write_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"></TextView>
            <ImageView
                android:id="@+id/write_image"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:onClick="clickMethod_enter_content"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/good"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="좋아요"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:onClick="clickMethod_enter_content"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ddatgeul_emoticon"
                    android:layout_width="67dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ddatgeul"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="댓글 보기"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />
        </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="#A39D9D"/>
            </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>