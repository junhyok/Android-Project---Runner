<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Password_edit">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E4775"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="25dp"
        android:textColor="#000000"
        android:text="비밀번호 수정"
        ></TextView>

    <EditText
        android:id="@+id/password_edit_input"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:hint="비밀번호 (4~8자)"></EditText>

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password_edit_check"
            android:layout_width="267dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="horizontal"></EditText>

        <ImageView
            android:id="@+id/edit_setImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"></ImageView>


    </LinearLayout>

    <Button
        android:id="@+id/button_password_edit_finish"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background_white"
        android:onClick="clickMethod_setting"
        android:text="비밀번호 수정"></Button>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <ImageButton
            android:onClick="clickMethod_active"
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/active"></ImageButton>

        <ImageButton
            android:onClick="clickMethod_community"
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/community"></ImageButton>

        <ImageButton
            android:onClick="clickMethod_record"
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/record"></ImageButton>

        <ImageButton
            android:onClick="clickMethod_profile"
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_1"></ImageButton>

        <ImageButton
            android:onClick="clickMethod_setting"
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#2196F3"
            android:scaleType="fitCenter"
            android:src="@drawable/setting"></ImageButton>


    </LinearLayout>

</LinearLayout>