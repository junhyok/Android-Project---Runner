<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setting">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E4775"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            />
    </androidx.appcompat.widget.Toolbar>
    <Button
        android:id="@+id/button_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      비밀번호 수정"
        android:textAlignment="textStart"
        android:background="#FFFFFF"
        android:onClick="clickMethod_password_edit"
        android:layout_gravity="start"></Button>
    <Button
        android:id="@+id/button_email_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      문의하기"
        android:textAlignment="textStart"
        android:background="#FFFFFF"
        android:layout_gravity="start"></Button>
    <Button
        android:id="@+id/button_exit_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      회원 탈퇴"
        android:textAlignment="textStart"
        android:background="#FFFFFF"
        android:layout_gravity="start"></Button>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      로그아웃"
        android:onClick="clickMethod_main"
        android:textColor="#FF0000"
        android:textAlignment="textStart"
        android:background="#FFFFFF"
        android:layout_gravity="start"></Button>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="375dp"
        android:orientation="horizontal">

        <ImageButton
            android:onClick="clickMethod_active"
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/active"></ImageButton>

        <ImageButton
            android:onClick="clickMethod_community"
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/community"></ImageButton>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:onClick="clickMethod_record"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/record"></ImageButton>

        <ImageButton
            android:onClick="clickMethod_profile"
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_1"></ImageButton>

        <ImageButton
            android:padding="10dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#2196F3"
            android:scaleType="fitCenter"
            android:src="@drawable/setting"></ImageButton>


    </LinearLayout>

</LinearLayout>