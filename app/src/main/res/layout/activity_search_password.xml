<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchPassword">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E4775"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="임시 비밀 번호로 로그인"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊으셨나요?"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"></TextView>

    <TextView
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="*이메일 주소를 입력해주시면 임시 비밀번호를 이메일로 보내드리겠습니다. 임시 비밀번호로 로그인 해주세요."
        android:textSize="15dp"></TextView>
    <EditText
        android:id="@+id/search_email"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:hint="이메일 주소 입력"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:inputType="textNoSuggestions"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="horizontal"></EditText>
    <TextView
        android:id="@+id/tv_error_email"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        tools:text="테스트 " />
    <Button
        android:id="@+id/button_send_email"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background_white"
        android:text="이메일로 보내기"
        android:textStyle="bold"></Button>


    <EditText
        android:id="@+id/editText_temp_password"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:hint="임시비밀번호 입력"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:inputType="textNoSuggestions"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="horizontal"></EditText>

    <Button
        android:id="@+id/button_temp_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background_white"
        android:text="임시비밀 번호로 로그인"
        android:textStyle="bold"></Button>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 정보를 기억하셨나요?"
            ></TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:onClick="clickMethod_main"
            android:background="@drawable/button_background_white"
            android:text="로그인"></Button>

    </LinearLayout>

</LinearLayout>